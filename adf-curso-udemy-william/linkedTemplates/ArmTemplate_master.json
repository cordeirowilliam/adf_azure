{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-curso-udemy-william"
		},
		"ls_azuresql_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_azuresql'"
		},
		"ls_cartola_local_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_cartola_local'"
		},
		"ls_datalake_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_datalake'"
		},
		"ls_cartola_local_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "D:\\Cursos\\Azure\\ADF\\Cartola"
		},
		"ls_cartola_local_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "William"
		},
		"ls_datalake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dlscursoudemywilliam.dfs.core.windows.net"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-curso-udemy-william_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_azuresql_connectionString": {
						"value": "[parameters('ls_azuresql_connectionString')]"
					},
					"ls_datalake_accountKey": {
						"value": "[parameters('ls_datalake_accountKey')]"
					},
					"ls_cartola_local_password": {
						"value": "[parameters('ls_cartola_local_password')]"
					},
					"ls_datalake_properties_typeProperties_url": {
						"value": "[parameters('ls_datalake_properties_typeProperties_url')]"
					},
					"ls_cartola_local_properties_typeProperties_host": {
						"value": "[parameters('ls_cartola_local_properties_typeProperties_host')]"
					},
					"ls_cartola_local_properties_typeProperties_userId": {
						"value": "[parameters('ls_cartola_local_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}